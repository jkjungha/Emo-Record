<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_forest"
    tools:context=".AddThingsWantToHearActivity">

    <ImageView
        android:id="@+id/add_back_arrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/back"
        android:backgroundTint="@color/dark_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add_want_hear"
        android:layout_width="278dp"
        android:layout_height="107dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/title5"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:text="Add something you want to hear"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_type_text"
        android:layout_width="203dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_2"
        android:ems="10"
        android:enabled="true"
        android:hint="  Type Something ..."
        android:inputType="text"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_done_button"
        android:layout_width="89dp"
        android:layout_height="45dp"
        android:layout_marginBottom="163dp"
        android:background="@drawable/leave2"
        android:text="Done"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
