<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/back"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_forest"
    tools:context=".WriteDairyActivity">

    <ImageView
        android:id="@+id/wrt_back_arrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/back"
        android:backgroundTint="@color/dark_green" />

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="40dp">

        <TextView
            android:id="@+id/view_dairy_title"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Title :"
            android:background="@drawable/title5"/>

        <EditText
            android:id="@+id/dairy_title"
            android:layout_width="209dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:hint="title"
            android:paddingLeft="10dp"
            android:background="@drawable/bg_2"
            android:inputType="text" />
    </LinearLayout>

    <EditText
        android:id="@+id/dairy_content"
        android:layout_width="311dp"
        android:layout_height="322dp"
        android:background="@drawable/bg_2"
        android:ems="20"
        android:gravity="top|left"
        android:hint="Write here"
        android:inputType="textMultiLine"
        android:lines="20"
        android:maxLines="20"
        android:padding="10dp"
        android:layout_gravity="center"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dairy_save_button"
        android:layout_width="89dp"
        android:layout_height="45dp"
        android:text="Save"
        android:background="@drawable/leave2"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="631dp" />


</LinearLayout>
