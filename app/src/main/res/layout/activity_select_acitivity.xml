<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_forest">

    <ImageView
        android:id="@+id/chk_back_arrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/back"
        android:backgroundTint="#04B486"
        android:translationY="5dp" />

    <LinearLayout
        android:translationX="18dp"
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <EditText
            android:textColor="@color/white"
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="0.7"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="액티비티 입력"
            android:textColorHint="#BDBDBD"
            android:translationY="15dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/user_input"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.7"
            android:background="@drawable/round"
            android:gravity="center"
            android:text="Add"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold"
            android:translationX="0dp"
            android:translationY="10dp" />
    </LinearLayout>

    <LinearLayout
        android:translationX="18dp"
        android:layout_width="375dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/back_round"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Act"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="act"
            android:textSize="18dp"
            android:textStyle="bold"
            android:translationX="20dp"
            android:translationY="13dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Act_But"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.5"
            android:background="@drawable/round"
            android:gravity="center"
            android:text="✔"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold"
            android:translationX="-15dp"
            android:translationY="13dp" />

    </LinearLayout>

    <LinearLayout
        android:translationX="18dp"
        android:layout_width="375dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/back_round"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Act1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="act"
            android:textSize="18dp"
            android:textStyle="bold"
            android:translationX="20dp"
            android:translationY="13dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Act_But1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.5"
            android:background="@drawable/round"
            android:gravity="center"
            android:text="✔"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold"
            android:translationX="-15dp"
            android:translationY="13dp" />

    </LinearLayout>

    <LinearLayout
        android:translationX="18dp"
        android:layout_width="375dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/back_round"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Act2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="act"
            android:textSize="18dp"
            android:textStyle="bold"
            android:translationX="20dp"
            android:translationY="13dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Act_But2"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.5"
            android:background="@drawable/round"
            android:gravity="center"
            android:text="✔"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold"
            android:translationX="-15dp"
            android:translationY="13dp" />

    </LinearLayout>


    <LinearLayout
        android:translationX="18dp"
        android:layout_width="375dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/back_round"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Act3"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="act"
            android:textSize="18dp"
            android:textStyle="bold"
            android:translationX="20dp"
            android:translationY="13dp" />

