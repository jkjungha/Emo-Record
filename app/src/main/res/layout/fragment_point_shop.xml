                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="50 point"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/sea_bgm_title" />

                </LinearLayout>

                <LinearLayout
