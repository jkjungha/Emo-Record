<!-- res/layout/change_theme.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_forest"
    android:orientation="vertical"
    tools:context=".ChangeThemeActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginBottom="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/bar_style"
            android:gravity="center"
            android:text="Settings"
            android:textSize="30sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/back_button"
            android:layout_width="59dp"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="6dp"
            app:srcCompat="?attr/actionModeCloseDrawable" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:padding="30dp"
        android:translationY="-30dp">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/black_border"
            android:orientation="vertical"
            android:paddingVertical="10dp"
            android:paddingLeft="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BGM settings"/>

                <Button
                    android:id="@+id/bgm_radio_default"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:text="default"
                    android:textSize="8sp"/>
            </LinearLayout>

            <RadioGroup
                android:id="@+id/bgm_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/exciting_bgm_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="exciting bgm" />

                <RadioButton
                    android:id="@+id/sea_bgm_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sea bgm" />

                <RadioButton
                    android:id="@+id/soft_bgm_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="soft bgm" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/black_border"
            android:orientation="vertical"
            android:paddingVertical="10dp"
            android:paddingLeft="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cloth settings"/>

                <Button
                    android:id="@+id/cloth_radio_default"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:text="default"
                    android:textSize="8sp"/>
            </LinearLayout>


            <RadioGroup
                android:id="@+id/cloth_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/crown_set_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="crown set" />

                <RadioButton
                    android:id="@+id/hanbok_set_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hanbok set" />

                <RadioButton
                    android:id="@+id/swim_set_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="swim set" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="170dp"
            android:background="@drawable/black_border"
            android:orientation="vertical"
            android:paddingVertical="10dp"
            android:paddingLeft="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Theme settings"/>

                <Button
                    android:id="@+id/theme_radio_default"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:text="default"
                    android:textSize="8sp"/>
            </LinearLayout>


            <RadioGroup
                android:id="@+id/theme_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/spring_theme_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="spring theme" />

                    <RadioButton
                        android:id="@+id/summer_theme_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="summer theme" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/autumn_theme_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="autumn theme" />

                    <RadioButton
                        android:id="@+id/winter_theme_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="winter theme"
                        android:visibility="gone"/>
                </LinearLayout>

            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/done_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/green"
            android:text="done" />

    </LinearLayout>

</LinearLayout>
